/**
 * This is for the Quit button on login page
 */

document.addEventListener('DOMContentLoaded', function () {
  let quitButton = document.getElementById('quit-link');
  let quitLink;

  if (quitButton) {
    if (quitButton.hasAttribute('data-quit-link')) {
      quitLink = quitButton.getAttribute('data-quit-link');
    }
    quitButton.addEventListener('click', async function () {
      $.ajax({
        headers: {
          'Content-Type': "application/json;charset=UTF-8"
        },
        url: `${cbs.contextPath}/redirectToSbank.ds`,
        method: 'GET',
        success: function (data, textStatus, jqXHR) {
          window.location.href = quitLink ? quitLink : data;
        },
        error: function (jqXHR, textStatus, errorThrown) {
          console.error(errorThrown);
        }
      });
    });
  }

});
