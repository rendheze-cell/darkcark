// Define scope (unless already loaded).
self.CBSQrCode = self.CBSQrCode || (function () {
    return {
        loadQr,
        fetchNewQrCode,
        getQrIdFromInputField,
        authQrIdRefresh
    };
    /**
     * Loads the QR code image.
     * Call refresh QR code image
     */
    function loadQr(qrId, isFTN) {
        $("#qrImage").attr("src",`${cbs.contextPath}/qr/image${isFTN?'':'.ds'}?qrId=${qrId}&size=200&padding=0`);
        $("#qr-image-dialog").attr("src",`${cbs.contextPath}/qr/image${isFTN?'':'.ds'}?qrId=${qrId}&size=500&padding=0`);
        addToInputField(qrId)
    }

    /**
     * Calling loadQR function after 20 seconds to update the QR code image
     */
    async function fetchNewQrCode() {
        const data = { 'content': null };
        return $.ajax({
            type: 'POST',
            url: '/ecj/qr/createCode.do',
            contentType: 'application/json',
            headers: {
                Accept: 'application/json'
            },
            data: JSON.stringify(data),
        });
    }

    async function authQrIdRefresh() {
        // Request qrId.
        const request = await fetch(`${cbs.contextPath}/qr/qrCode.ds`, {
            method: 'GET',
            headers: CBSFetchUtils.requestHeadersExtended()
        });
        return await CBSFetchUtils.requestResponseBody(request);
    }

    function addToInputField(qrId) {
        $('#qrId').val(qrId);
    }

    function getQrIdFromInputField() {
        return $('#qrId').val();
    }
})();
